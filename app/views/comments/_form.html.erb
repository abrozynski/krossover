
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
  <%= current_user.first_name %> <%= current_user.last_name %>
</p>
  <p class="blog-post">
    <%= f.label :'blog post' %><br>
    <%= f.text_area :body, :class => 'form-control' %>
  </p>
  <p>
    <%= f.submit "Submit To This Goal", :class => 'btn btn-lg' %>
  </p>
<% end %>

