<h1>Refer a coach </h1>
<hr >


<p>Tell your fellow coaches about this and earn extra kredits!</p>

<hr >

<%= simple_form_for ([@referral]), :html => { :mulitpart => true } do |f| %>

 <% if @referral.errors.any? %>
  <div class="alert alert-error">
    <h2><%= pluralize(@referral.errors.count, "error") %> prohibited
      this referral from being sent:</h2>
    <ul>
    <% @referral.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>

    <% end %>
    </div>

 <% end %>

 
  <h3> Please, tell us about who you are referring to use Krossover: </h3>

   <div> </br>
  <%= f.text_field :name, placeholder: 'First Name' %></div>

   <div>  </br>
  <%= f.text_field :last_name, placeholder: 'Last Name' %></div>
 
  <div> </br>
  <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %></div>

   <div> </br>
  <%= f.telephone_field :phone_number, placeholder: "Phone Number" %></div>

   <div>  </br>
  <%= f.text_field :school, placeholder: 'School' %></div>

   <div>  </br> <%= f.label :what_sport_do_they_coach? %>
  <%= f.select :sport, options_for_select([["Basketball", "Basketball"], ["Volleyball","Volleyball"], ["Lacrosse","Lacrosse"], ["Football","Football"]])%>
</div>


</br>
  <div><p><%= f.submit "Refer This Coach", :class => 'btn btn-lg btn-primary' %></p></div>


<p>  <%= link_to 'Back', root_path %></p>

<% end %>




   