<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


<br />
  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, placeholder: 'ex: Joe' %></div>

<br />
  <div><%= f.label :last_name %>
  <%= f.text_field :last_name, placeholder: 'ex: Jones' %></div>

<br />
  <div><%= f.label :email %>
  <%= f.email_field :email, autofocus: true, placeholder: 'ex: jones@gmail.com' %></div>

<br />
    <div><%= f.label :picture %><br />
  <%= f.file_field :picture %></div>

<br />
  <div><%= f.label :school_name %>
  <%= f.text_field :school_name, placeholder: 'Krossover High School' %></div>

<br />
  <div><%= f.label :sport %>
  <%= f.select :sport, options_for_select([["Basketball", "Basketball"], ["Volleyball","Volleyball"], ["Lacrosse","Lacrosse"], ["Football","Football"]])%></div>

<br />
  <div><%= f.label :bio %>
  <%= f.text_area :bio, max_length: 100, rows: 5, placeholder: 'Tell us a little about you and your coaching career (max 100 characters)' %></div>

<br />
  <div><%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Must be 8 characters' %></div>

<br />
  <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Retype your password' %></div>


</br>
  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>

<% end %>



<%= render "devise/shared/links" %>
