   <h1><%= @user.first_name %> <%= @user.last_name %>
	 </h1>

    <div class="user-image">      
         <%= image_tag(@user.picture_url, :width => 600) if @user.picture.present? %>
         <%= image_tag("avatar.png", :width => 600) if @user.picture.blank? %>

         <% if current_user == @user %>
         <p class="user-edit"> 
          <%= link_to 'Edit your profile', '/users/edit' %> 
        </p>
         <%end%>
    </div>


	 <hr>

	
	 <p>
	  <strong>School:</strong>
	  <%= @user.school_name %>
	</p>
	 <p>
	  <strong>Sport:</strong>
	  <%= @user.sport %>
	</p>
     <p>
      <strong>Current Kredit:</strong>
      <%= @user.kredit %>
    </p>
  <p>
      <strong>Lifetime Kredit:</strong>
      <%= @user.cumulative_kredit %>
  </p>

</br>

  <p>
      <strong>Coaching Bio:</strong>
      <%= @user.bio %>
  </p>

</br> 
<hr>
  <p>
    <a  href= "/users" class='btn btn-large btn-primary'>Kredit Leaderboard</a>
  </p>
</br>

   <table class="table table-striped">

          <tr>
            <th>News Feed</th>
          </tr>

            <% @feed.each do |f| %>
          
          <tr>
            <td><%= link_to f['feed_text'], f['link']  %></td>
          </tr>
      
      <% end %>

       </table>

    
 
	<hr>
<p>
<div class="fb-like" data-href="https://facebook.com/krossoverintelligence/" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div>
</p>

